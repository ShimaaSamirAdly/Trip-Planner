<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#cccccc"
    app:cardCornerRadius="@dimen/tweleve_sp"
    android:layout_margin="@dimen/tweleve_sp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.constraint.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/card_view"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:padding="10dp"
card_view:cardCornerRadius="4dp"
tools:layout_editor_absoluteX="11dp"
tools:layout_editor_absoluteY="92dp">

<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/imageView2_past"
    android:layout_width="109dp"
    android:layout_height="126dp"
    android:layout_marginTop="16dp"
    android:src="@drawable/defaultimage"
    card_view:layout_constraintStart_toStartOf="parent"
    card_view:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_trip_name_past"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:textColor="@color/textColor"
        android:textSize="@dimen/tweleve_four_sp"
        card_view:layout_constraintStart_toEndOf="@+id/imageView2_past"
        card_view:layout_constraintTop_toTopOf="parent"
        tools:text="trip name" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="24dp"
        android:text="Start Point  : "
        android:textColor="@color/textColor"
        android:textSize="@dimen/tweleve_sp"
        card_view:layout_constraintBaseline_toBaselineOf="@+id/text_view_start_point_past"
        card_view:layout_constraintEnd_toEndOf="@+id/text_view_trip_name_past"
        card_view:layout_constraintHorizontal_bias="0.04"
        card_view:layout_constraintStart_toStartOf="@+id/text_view_trip_name_past"
        card_view:layout_constraintTop_toBottomOf="@+id/text_view_trip_name_past" />

    <TextView
        android:id="@+id/text_view_start_point_past"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="68dp"
        android:textColor="@color/textColor"
        android:textSize="@dimen/tweleve_sp"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="0.0"
        card_view:layout_constraintStart_toEndOf="@+id/textView4"
        card_view:layout_constraintTop_toTopOf="parent"
        tools:text="start point" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:text="Date : "
        android:textColor="@color/textColor"
        android:textSize="@dimen/tweleve_sp"
        card_view:layout_constraintBaseline_toBaselineOf="@+id/text_view_date_past"
        card_view:layout_constraintEnd_toEndOf="@+id/textView4"
        card_view:layout_constraintHorizontal_bias="0.0"
        card_view:layout_constraintStart_toStartOf="@+id/textView4"
        card_view:layout_constraintTop_toBottomOf="@+id/textView4" />


<TextView
    android:id="@+id/text_view_date_past"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:textColor="@color/textColor"
    android:textSize="@dimen/tweleve_sp"
    card_view:layout_constraintStart_toEndOf="@+id/textView5"
    card_view:layout_constraintTop_toBottomOf="@+id/text_view_start_point_past"
    tools:text="date" />

    <Button
    android:id="@+id/button_delete_trip_past"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="16dp"

    android:text="Delete Trip"
        android:background="#32384d"
        android:textColor="#cccccc"
        android:textSize="@dimen/tweleve_sp"
    card_view:layout_constraintEnd_toEndOf="parent"
    card_view:layout_constraintHorizontal_bias="0.671"
    card_view:layout_constraintStart_toEndOf="@+id/textView5"
    card_view:layout_constraintTop_toBottomOf="@+id/text_view_date_past" />


</android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>